<div class="general">
  <h1>⚠️ Rails Longest Word Game 🕹</h1>

  <div class="letters">
    <% @letters.upcase.split("").each do |letter| %>
    <div class="letter"><h3><%= letter %></h3></div>
    <% end %>
  </div>
  <p>Whats is the longest word you can find ?</p>
  <form action="/score" class="form-inline" method="post">
    <input type="text" name="word">
    <input type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
